import javax.swing.JPanel;

import org.jfree.data.xy.XYSeries;


public class SignalGraph extends JPanel {
	public SignalGraph(Sampling s){
		ShortTermAnalysis sta = new ShortTermAnalysis();
		DefaultXYDataset data = new DefaultXYDataset();
		
		XYSeries original = new XYSeries("Signal");
		XYSeries energy = new XYSeries("Energy");
		XYSeries magnitude = new XYSeries("Magnitude");
		XYSeries zeroCrossing = new XYSeries("Zero Crossing Rate");
		
		original.
	}
	
	private XYSeries buildSeriesAgainstTime(String name, Sampling s, int values[]){
		XYSeries plot = new XYSeries(name);
		for(int i = 0; i < s.getSampling().length; i++){
			plot.add(i / (s.getSampling().length / s.getSamplingRate()), values[i]);
		}
		return plot;
	}
}

